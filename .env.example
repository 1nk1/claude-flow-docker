# Claude-Flow Docker Configuration
# ============================================
# CLAUDE FLOW CONFIGURATION
# ============================================

# Anthropic API Key (required)
ANTHROPIC_API_KEY=sk-ant-your-api-key

# Environment
NODE_ENV=production
CLAUDE_FLOW_AUTO_INIT=true
CLAUDE_FLOW_SKIP_PERMISSIONS=false

# Project paths
PROJECT_PATH=~/projects/example-project-folder
DESKTOP_FILES_PATH=~/Desktop/files

# MCP Server configuration
MCP_SERVER_MODE=stdio                        # stdio (recommended), tcp, or http
MCP_SERVER_PORT=8811
MCP_DEBUG=debug

PATH="/usr/local/bin:/usr/local/lib/node_modules/.bin:/workspace/.claude:$PATH"
PYTHON=/usr/bin/python3

# Logging Configuration
# ============================================
# Log levels: TRACE, DEBUG, INFO, SUCCESS, WARN, ERROR, FATAL
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE=/workspace/logs/claude-flow.log
LOG_TIMESTAMP_FORMAT=%Y-%m-%d %H:%M:%S

# Claude Flow settings
CLAUDE_FLOW_LOG_LEVEL=info
CLAUDE_FLOW_HOME=/workspace
CLAUDE_FLOW_PROJECT=/workspace/project
CLAUDE_FLOW_STORAGE=/workspace/.swarm

# Resource Limits for MacBook M4 (recommended)
CONTAINER_CPU_LIMIT=1
CONTAINER_CPU_RESERVATION=1
CONTAINER_MEMORY_LIMIT=2G
CONTAINER_MEMORY_RESERVATION=2G

# Docker Compose
COMPOSE_PROJECT_NAME=claude-flow
CONTAINER_NAME=claude-flow-alpha

# Flow Nexus (optional)
FLOW_NEXUS_ENABLED=true
FLOW_NEXUS_API_URL=https://flow-nexus.ruv.io

# GitHub Integration (optional)
# GITHUB_TOKEN=your-github-token-here
# GITHUB_USERNAME=your-username

# Node.js advanced memory tuning for ARM/M4
NODE_OPTIONS=--max-old-space-size=4096

# SQLite and temporary directories
SQLITE_TMPDIR=/workspace/.swarm
