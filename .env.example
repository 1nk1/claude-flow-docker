# Claude-Flow Docker Configuration
# Копируйте этот файл как .env и настройте под свой проект

ANTHROPIC_API_KEY=your-api-key-here

# Общие настройки
NODE_ENV=development
CLAUDE_FLOW_LOG_LEVEL=debug

# Пути (внутри контейнера)
CLAUDE_FLOW_HOME=/workspace
CLAUDE_FLOW_PROJECT=/workspace/project
CLAUDE_FLOW_STORAGE=/workspace/.swarm

# MCP Server настройки
MCP_SERVER_MODE=stdio
MCP_DEBUG=false

# Resource limits
CONTAINER_CPU_LIMIT=1
CONTAINER_CPU_RESERVATION=0.5

CONTAINER_MEMORY_LIMIT=2G
CONTAINER_CPU_RESERVATION=2
CONTAINER_MEMORY_RESERVATION=1G

# Docker настройки
COMPOSE_PROJECT_NAME=claude-flow
CONTAINER_NAME=claude-flow-alpha

# Flow Nexus (опционально)
FLOW_NEXUS_ENABLED=false
FLOW_NEXUS_API_URL=https://flow-nexus.ruv.io
# FLOW_NEXUS_API_KEY=your-api-key-here

# GitHub Integration (опционально)
# GITHUB_TOKEN=your-github-token-here
# GITHUB_USERNAME=your-username

# Advanced settings
SQLITE_TMPDIR=/workspace/.swarm
CLAUDE_FLOW_AUTO_INIT=true
CLAUDE_FLOW_SKIP_PERMISSIONS=false
